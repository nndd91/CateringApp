Current Menu
<div class="panel panel-default" id="menupanel">
    <% @menus.each do |x| %>
    <div class="panel panel-default" id="menucard">
        
        <div id="menuimage"><%= image_tag x.img_location.url %></div>

        <div class="content">
            <div class="header"><%= x.item %>
            </div>
            <div class="description"><%= x.description %>.
            </div>
        </div>
        <div class="extra content"><!-- start of extra content -->
            <div class="ui labeled icon menu">
                <div class="ui left floated compact segment">
                    <%= check_box_tag(x.itemtag) %>
                    <label>Active</label>
                </div>
                <%= link_to 'Delete', menus_url(id: x.id), method: :delete, data: { confirm: "Are you sure?" } %>
            </div>
            
        </div><!-- end of extra content -->
    </div>
    <% end %>
</div>