<%# Select price plan%>

<% @priceplan.each do |y|%>
<br>
  <%= radio_button_tag(:id, y.id) %>
  <%= y.no_of_people %>
  <%= y.no_of_dishes %>
  <%= y.price %>
  <%= y.add_item_cost %>
<% end %>
<%= form_for @order do |f| %>


<h2>Price plan</h2>
<div class="panel panel-default">
              <div class="panel-body">
                <div class="radio">
                  <label><input type="radio" name="optradio">10 pax @ $50</label>
                </div>
                <div class="radio">
                  <label><input type="radio" name="optradio">40 pax @ $80</label>
                </div>
                <div class="radio disabled">
                  <label><input type="radio" name="optradio">100 pax @ $$$</label>
                </div>
              </div>
            </div>
        </div>





<div class="ui container">
<h2>Current Menu</h2>
<br>
    <div class="ui grid">
        <div class="row">

            <div class="row">
                <div class="ui card">
                    <img class="ui image" src="http://mrg.bz/TRRrQJ">

                    <div class="content">
                        <div class="header">Pizza Margherita</div>
                        <div class="description">Invented in Naples in honor of the first queen of Italy, the Margherita
                            pizza is the triumph of Italian cuisine in the world.
                        </div>
                    </div>
                    <div class="extra content">
                        <div class="ui labeled icon menu">
                            <div class="ui left floated compact segment">
                                <div class="ui checked checkbox">
                                    <input type="checkbox" checked="">
                                    <label>Active</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

              <% @menus.each do |x| %>
              <div class="row">
                <div class="ui card">
                    <img class="ui image" src=<%= x.img_location %>>

                    <div class="content">
                        <div class="header"><%= x.item %></div>
                        <div class="description"><%= x.description %>.
                        </div>
                    </div>
                    <div class="extra content">
                        <div class="ui labeled icon menu">
                            <div class="ui left floated compact segment">
                                <div class="ui checked checkbox">
                                    <%= check_box_tag(x.itemtag) %>
                                    <label>Active</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
             <% end %>
             <p><p>



    <div class="ui fluid form">
        <div class="inline fields">
            <div class="field">
                <label for="first_name"> <%= f.label :custname %></label>
                <%= f.text_field :custname %> 
            </div>
            <div class="field">
                <label for="last_name"><%= f.label :contactnumber %></label>
                <%= f.text_field :contactnumber %>
            </div>

            <div class="field">
                <label for="last_name"><%= f.label :email %></label>
                <%= f.text_field :email %>
            </div>
            <div class="field">
                
                      <%= f.label :deliveryDate%>
                      <%= f.date_field :deliveryDate%>
                
            </div>
            <br/>

        </div>


        <div class="field">
            <label for="address">Customer Address</label>
            <%= f.text_field :custaddress %>
        </div>

        <br>
  
  <div class="ui left action input">
  <button class="ui labeled icon button">
    <i class="cart icon"></i>
    <%= f.submit %>
  </button>
  <input type="text" value="$70.00" readonly>
</div>
    </div>


<% end %>
